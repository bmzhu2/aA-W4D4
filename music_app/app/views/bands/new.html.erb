<h2>Add a band to the list</h2>

<form action="<%=bands_url%>" method="POST">
    <%=auth_token%>
    <label for="name">Name: </label>
    <input type="text" name="band[name]">

    <input type="submit" value="Add!"> 
    <br><br>
    <div class="link-buttons">
        <a href="<%=bands_url%>">Cancel</a>
    </div>
</form>