<% 
    band = @band
    albums = band.albums.order(:year)
%>

<h2><%=band.name%></h2>

<table>
    <thead>
        <th>Album Title</td>
        <th>Year</td>
        <th>Performance</td>
    </thead>

    <% albums.each do |album|%>
        <tr>
            <td class="album-name"><a href="<%=album_url(album)%>"><%=album.title%></a></td>
            <td><%=album.year%></td>
            <td><%=album.live_or_studio%></td>
        </tr>
    <% end %>
</table>

<br><br>

<div class="link-buttons">
    <a href="<%= new_band_album_url(band) %>">Add Album</a>
    <a href="<%= edit_band_url(band) %>">Edit Name</a>
    <a href="<%= bands_url %>">Browse Bands</a>
</div>
<br><br>
<form action="<%= band_url(band) %>" method="POST">
    <%=auth_token%>
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="Remove from List">
</form>